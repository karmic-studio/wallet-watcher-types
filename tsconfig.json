{
  "compilerOptions": {
    "outDir": "./dist",        // Output directory for compiled files
    "rootDir": "./src",        // Root directory for source files
    "target": "ES2019",        // ECMAScript target version
    "module": "commonjs",      // Module system to use
    "declaration": true,       // Generate .d.ts files
    "declarationMap": true,    // Create sourcemaps for declarations
    "sourceMap": true,         // Create sourcemaps for JavaScript files
    "strict": true,            // Enable all strict type-checking options
    "esModuleInterop": true,   // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true       // Skip type checking of all declaration files
  },
  "include": ["src/**/*"],      // Include all TypeScript files in src directory
  "exclude": ["node_modules"]  // Exclude node_modules and dist directories
}